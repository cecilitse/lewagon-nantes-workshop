<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Team Building - Activity</title>
    <%= stylesheet "/style.css" %>
    <script type="text/javascript" src="/script.js"></script>
  </head>
  <body>
    <h1>
      <%= @activity["name"] %>
      <small>[<%= @activity["category"].upcase %>]</small>
    </h1>
    <ul>
      <li>Located in <%= @activity["city"] %></li>
      <li>Duration of <%= @activity["duration"] %> minutes</li>
      <li>For <%= @activity["participants_count"] %> participants</li>
      <li>Charged <%= @activity["price"] %>â‚¬</li>
      <li>My teams are <%= @teams%> </li>

    </ul>

<ul>
  <% @teams.each do |team| %>
    <% if @wishlist.include?team["id"] %>
    <li>
        <form action="/activities/<%= @activity["id"]%>/wishlist/<%= team["id"] %>" method="post">
        <input name="_method" value="DELETE" type="hidden">

          <button>
            <%= team["id"]%>
          </button>

        </form>
      </li>
    <% else %>
      <li>
        <form action="/activities/5/wishlist/<%= team["id"] %>" method="post">


          <button>
            <%= team["name"] %>
          </button>

        </form>
      </li>
    <% end %>
  <% end %>
</ul>

<%=@team_favorite%>
<%=@wishlist%>

  </body>
</html>
